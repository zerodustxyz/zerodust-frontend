# Base Sepolia
NEXT_PUBLIC_RPC_BASE_SEPOLIA=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or public: https://sepolia.base.org

# Optimism Sepolia
NEXT_PUBLIC_RPC_OP_SEPOLIA=https://opt-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
